@model IEnumerable<Library_Management_System.Models.User>
@{
    ViewData["Title"] = "User Details";
}


<h2>User Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Role</th>
            <th>Date Registered</th>
            <th>Active Status</th>
            <th>Borrowed Books</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var User in Model)
        {
            <tr>
                <td>@User.FullName</td>
                <td>@User.Email</td>
                <td>@User.Password</td>
                <td>@User.Role</td>
                <td>@(User.DateRegistered.ToShortDateString() ?? "-")</td>
                <td>@(User.IsActive ? "Yes" : "No")</td>
                <td>
                    @if (User.BorrowedBooks.Any())
                    {
                        <ul>
                            @foreach (var book in User.BorrowedBooks)
                            {
                                <li>@book.Title</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>None</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>